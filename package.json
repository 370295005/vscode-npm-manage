{
	"name": "vscode-npm-manage",
	"displayName": "Npm Manage",
	"description": "VSCode Npm管理插件",
	"keywords": ["npm", "npm manage", "manage"],
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other",
		"Extension Packs"
	],
	"activationEvents": [
		"onCommand:vscode-npm-manage.npmUpdateLatest",
		"onCommand:vscode-npm-manage.openNpmManageView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "vscode-npm-manage",
			"properties": {
				"vscodeNpmManage.yourName": {
					"type": "string",
					"default": "guest",
					"description": "你的名字"
				},
				"vscodeNpmManage.showTip": {
					"type": "boolean",
					"default": true,
					"description": "是否在每次启动时显示欢迎提示！"
				}
			}
		},
		"menus": {
			"editor/title": [{
				"when": "resourceFilename == package.json",
				"command": "vscode-npm-manage.openNpmManageView",
				"group": "navigation"
			}],
			"editor/context": [{
				"when": "resourceFilename == package.json",
				"command": "vscode-npm-manage.openNpmManageView",
				"group": "navigation"
			}]
    },
		"commands": [
			{
				"command": "vscode-npm-manage.openNpmManageView",
				"title": "Open Npm Manage View",
				"category": "Npm Manage",
				"icon": {
					"light": "/src/images/check-light.svg",
					"dark": "/src/images/check-dark.svg"
        }
			},
			{
				"command": "vscode-npm-manage.npmUpdateLatest",
				"title": "npm update latest",
				"category": "Npm Manage"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
